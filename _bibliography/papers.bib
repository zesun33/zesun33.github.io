@article{zhang2024self,
  title={Self-sensitizable neuromorphic device based on adaptive hydrogen gradient},
  author={Zhang, Tao and Hu, Mingjie and Mia, Md Zesun Ahmed and Zhang, Hao and Mao, Wei and Fukutani, Katsuyuki and Matsuzaki, Hiroyuki and Wen, Lingzhi and Wang, Cong and Zhao, Hongbo and others},
  journal={Matter},
  volume={7},
  number={5},
  pages={1799--1816},
  year={2024},
  publisher=elsevier,
  bibtex_show={true},
  selected={true},
  abstract={We report a novel self-sensitizable neuromorphic device that employs adaptive hydrogen gradients to achieve brain-like synaptic plasticity and learning functionality. The device architecture exploits controlled hydrogen migration and redistribution within nanostructured materials to modulate synaptic weights dynamically. Through systematic characterization, we demonstrate that the hydrogen gradient mechanism enables both short-term and long-term plasticity, essential for neuromorphic computing applications. The device exhibits remarkable endurance, low power consumption, and excellent retention characteristics. Our approach provides insights into the role of ionic species in artificial synaptic devices and opens new pathways for developing energy-efficient neuromorphic hardware with enhanced learning capabilities and biological fidelity.},
  abbr={Matter}
}

@misc{mia2024rmaat,
  title={{RMAAT}: A Bio-Inspired Approach for Efficient Long-Context Sequence Processing in Transformers},
  author={Md Zesun Ahmed Mia and Malyaban Bal and Abhronil Sengupta},
  year={2024},
  url={https://openreview.net/forum?id=ikSrEv8FId},
  bibtex_show={true},
  abstract={RMAAT presents a novel bio-inspired approach to address the computational challenges of processing long-context sequences in transformer architectures. Drawing inspiration from biological neural attention mechanisms and memory consolidation processes, we introduce a recursive memory-attention architecture that dynamically allocates computational resources based on sequence relevance and temporal importance. The proposed method employs adaptive attention pruning, hierarchical memory structures, and biologically-motivated forgetting mechanisms to achieve linear complexity scaling with sequence length. Extensive experiments on long-document understanding, video analysis, and temporal sequence modeling demonstrate significant improvements in both computational efficiency and performance accuracy. RMAAT reduces memory requirements by up to 80% while maintaining or improving task performance, enabling practical deployment of transformers on resource-constrained environments for long-context applications.},
  abbr={OpenReview}
}

@inproceedings{mia2024ultra,
  title={Ultra Low Cost, Low Power, High Speed Electronic Braille Device for Visually Impaired People},
  author={Mia, Md Zesun Ahmed and Ahmed, Kazi Toukir},
